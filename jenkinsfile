pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
               sh "echo 'Building the code'"
                
            }
        }
        stage('Test') {
            steps {
               sh "echo 'Testing the code'"
                
            }
        }
        stage('Deploy') {
            steps {
              sh  "echo 'Deploying the code for production'"
      
            }
        }
    }
}
